VENV_DIR ?= .venv
PYTHON := $(VENV_DIR)/bin/python
PIP := $(VENV_DIR)/bin/pip

install: $(VENV_DIR)/touchfile ## âœ¨ Create venv and install dependencies from requirements.txt

$(VENV_DIR)/touchfile: requirements.txt
	@echo "--> Creating virtual environment..."
	python3 -m venv $(VENV_DIR)
	@echo "--> Installing dependencies..."
	$(PIP) install -r requirements.txt
	@echo "--> Installing MCP tool dependencies..."
	$(PIP) install -r tools/mcp_tools/python_mcp/requirements.txt
	@touch $(VENV_DIR)/touchfile

import-all: install ## ðŸš€ Import all agents and toolkits into your watsonx instance
	@echo "--> Running import script..."
	@bash scripts/import-all.sh

run-mcp-server: install ## ðŸ› ï¸ Run the Python MCP tool server locally
	@echo "--> Starting the Python MCP server..."
	$(PYTHON) tools/mcp_tools/python_mcp/src/main.py

clean: ## ðŸ—‘ï¸ Remove virtual environment and temporary files
	@echo "--> Cleaning up..."
	rm -rf $(VENV_DIR) results/

help: ## ðŸ’¬ Show this help message
	@echo "Usage: make [target]"
	@echo ""
	@echo "Targets:"
